<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.faranegar.customtoolbar.MainActivity">

    <com.faranegar.customtoolbar.CustomToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:hintTextColor="@color/hintTextColor"
        app:isSearchSupported="true"
        app:toolbarTextColor="@color/toolbarTextColor"
        app:toolbarTextTile="@string/toolbar_title" />

</android.support.constraint.ConstraintLayout>
